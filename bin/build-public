#!/bin/bash -ex

mkdir public

cat > public/index.html << EOL
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>My Static Site</title>
</head>
<body>
    This is a static site
</body>
</html>
EOL
